{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "google",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "new-cap": "off",
        "require-jsdoc": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true
            }
        ],
        "@typescript-eslint/consistent-type-definitions": [
            "error"
        ]
    }
}