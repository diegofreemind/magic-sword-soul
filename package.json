    "eslint": "^8.14.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.8",
